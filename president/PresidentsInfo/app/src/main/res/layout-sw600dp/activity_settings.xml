<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_settings"
    tools:context="com.ingentive.presidentsinfo.activity.SettingsActivity">

    <com.ingentive.presidentsinfo.customview.CustomTextViewBoldFont
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="SETTINGS"
        android:textColor="#731c12"
        app:boldFont="mrseavesot-bold.ttf"
        android:textSize="50sp" />

    <com.ingentive.presidentsinfo.customview.CustomTextViewBoldFont
        android:id="@+id/tv_font_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="FONT SIZE"
        app:boldFont="mrseavesot-bold.ttf"
        android:textColor="#455676"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/font_layout"
        android:layout_width="640dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_font_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.ingentive.presidentsinfo.customview.CustomButtonRomanFont
            android:id="@+id/btn_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/settings_btn_selector"
            android:text="SMALL"
            android:textSize="25sp"
            app:romanFont="mrseavesot-roman.ttf"
            android:textColor="@android:color/white" />

        <com.ingentive.presidentsinfo.customview.CustomButtonRomanFont
            android:layout_toRightOf="@+id/btn_small"
            android:id="@+id/btn_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/settings_btn_selector"
            android:text="MEDIUM"
            android:textSize="25sp"
            app:romanFont="mrseavesot-bold.ttf"
            android:textColor="@android:color/white" />

        <com.ingentive.presidentsinfo.customview.CustomButtonBoldFont
            android:layout_toRightOf="@+id/btn_medium"
            android:id="@+id/btn_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_btn_selector"
            android:text="LARGE"
            android:textSize="25sp"
            android:layout_weight="1"
            app:romanFont="mrseavesot-roman.ttf"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <com.ingentive.presidentsinfo.customview.CustomTextViewBoldFont
        android:id="@+id/tv_randomization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/font_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="TURN RANDOMIZATION"
        app:boldFont="mrseavesot-bold.ttf"
        android:textColor="#455676"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/randomization_layout"
        android:layout_width="640dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_randomization"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ingentive.presidentsinfo.customview.CustomButtonRomanFont
            android:id="@+id/btn_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/settings_btn_selector"
            android:text="ON"
            android:textSize="25sp"
            app:romanFont="mrseavesot-roman.ttf"
            android:layout_weight="1"
            android:textColor="@android:color/white" />

        <com.ingentive.presidentsinfo.customview.CustomButtonRomanFont
            android:id="@+id/btn_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/settings_btn_selector"
            android:text="OFF"
            android:textSize="25sp"
            android:layout_weight="1"
            app:romanFont="mrseavesot-roman.ttf"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <com.ingentive.presidentsinfo.customview.CustomButtonRomanFont
        android:layout_marginTop="50dp"
        android:layout_below="@+id/randomization_layout"
        android:id="@+id/btn_back_to_story"
        android:layout_width="640dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/settings_btn_selector"
        android:text="Back To Story"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        app:boldFont="mrseavesot-roman.ttf"
        android:textSize="25sp"
        android:textColor="@android:color/white" />
</RelativeLayout>
