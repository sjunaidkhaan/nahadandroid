<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-2dp"
    tools:context=".activity.MainMenuActivity">


    <ImageView
        android:id="@+id/logo"
        style="@style/MainMenuImageViewMarginLBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/layer_five_copy" />

    <ImageView
        android:id="@+id/call_nahad"
        style="@style/MainMenuImageViewMarginRBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontal_line"
        android:layout_alignBaseline="@+id/logo"
        android:layout_alignParentRight="true"
        android:background="@drawable/call_nahad_org" />

    <ImageView
        android:id="@+id/horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:background="@drawable/horizontal_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/horizontal_line"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="-4dp"
            android:layout_weight="4"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/logo_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/logo"
                android:orientation="vertical"
                android:layout_marginBottom="-8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/logo"
                    android:layout_marginBottom="-3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/tv_institute_handbook_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="-3dp"
                        android:background="@drawable/handbook_selector"
                        android:clickable="true">

                        <RelativeLayout
                            android:id="@+id/handbook_"
                            style="@style/MainMenuViewMarginTop50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/handbook">

                            <ImageView
                                android:id="@+id/handbook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/nahad" />
                        </RelativeLayout>

                        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                            style="@style/MainMenuCustomTextViewGothamFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/handbook_"
                            android:text="Institute Handbook"
                            app:gothamFont="ufonts.com_gotham-medium.ttf" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/fabb_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="-3dp"
                        android:background="@drawable/fab_selector"
                        android:clickable="true">

                        <RelativeLayout
                            android:id="@+id/fabb"
                            style="@style/MainMenuViewMarginTop50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/fabb">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/comp" />
                        </RelativeLayout>

                        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                            style="@style/MainMenuCustomTextViewGothamFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fabb"
                            android:text="Fabrication Guides"
                            app:gothamFont="ufonts.com_gotham-medium.ttf" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/logo"
                    android:layout_weight="1"
                    android:layout_marginTop="-3dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/white_papers_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="-3dp"
                        android:background="@drawable/white_papers_selector"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/rectangle_ten_copy"
                            style="@style/MainMenuViewMarginTop50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/layer_eleven" />

                        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                            style="@style/MainMenuCustomTextViewGothamFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rectangle_ten_copy"
                            android:text="White Papers"
                            app:gothamFont="ufonts.com_gotham-medium.ttf" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/resources_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="-3dp"
                        android:background="@drawable/resources_selector"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/rectangle_ten_copy_four"
                            style="@style/MainMenuViewMarginTop50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rounded_rectangle_five" />

                        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                            style="@style/MainMenuCustomTextViewGothamFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rectangle_ten_copy_four"
                            android:text="Resources"
                            app:gothamFont="ufonts.com_gotham-medium.ttf" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/logo"
                    android:layout_weight="1"
                    android:layout_marginTop="-3dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/glossary_lauout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="-3dp"
                        android:background="@drawable/glossary_selector"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/glossary_icon"
                            style="@style/MainMenuViewMarginTop50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/glossary_icon" />

                        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                            style="@style/MainMenuCustomTextViewGothamFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/glossary_icon"
                            android:text="Glossary"
                            app:gothamFont="ufonts.com_gotham-medium.ttf" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/visit_website_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="-3dp"
                        android:background="@drawable/visit_website_selector"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/www"
                            style="@style/MainMenuViewMarginTop50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/www" />

                        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                            style="@style/MainMenuCustomTextViewGothamFont"
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Visit NAHAD Website"
                            app:gothamFont="ufonts.com_gotham-medium.ttf" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-5dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nahadmainimage" />

            <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                android:id="@+id/tv_selected"
                style="@style/MainMenuListViewPadding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:gothamFont="ufonts.com_gotham-medium.ttf" />

            <ListView
                android:id="@+id/listview"
                style="@style/MainMenuListViewPadding"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/tv_selected"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
