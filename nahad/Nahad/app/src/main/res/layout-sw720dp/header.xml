<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/layer_five_copy" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:id="@+id/toc_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_toc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/toc" />

            <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                android:id="@+id/tv_toc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_toc"
                android:text="TABLE OF CONTENTS"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                app:gothamFont="ufonts.com_gotham-medium.ttf"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@+id/toc_layout"
            android:id="@+id/a_z_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_a_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a_z" />

            <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                app:gothamFont="ufonts.com_gotham-medium.ttf"
                android:textSize="10sp"
                android:text="GLOSSARY"
                android:id="@+id/glossary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_a_z"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bookmarks_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/a_z_layout">

            <ImageView
                android:id="@+id/layer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/topbookmark" />

            <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                app:gothamFont="ufonts.com_gotham-medium.ttf"
                android:id="@+id/bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layer_one"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
               android:text="FAVORITES"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/send_email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@id/bookmarks_layout"
            android:layout_toRightOf="@+id/bookmarks_layout">

            <ImageView
                android:id="@+id/at_the_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/at_the_rate" />

            <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                app:gothamFont="ufonts.com_gotham-medium.ttf"
                android:textSize="10sp"
                android:text="SEND EMAIL"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/at_the_rate"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-3dp"
            android:layout_alignBaseline="@id/send_email_layout"
            android:layout_toRightOf="@+id/send_email_layout"
            android:gravity="right">

            <ImageView
                android:id="@+id/iv_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/menu" />

            <com.ingentive.nahad.customfont.CustomTextViewGothamFont
                app:gothamFont="ufonts.com_gotham-medium.ttf"
                android:textSize="10sp"
                android:text="MAIN MENU"
                android:id="@+id/iv_main_manu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_menu_icon"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>