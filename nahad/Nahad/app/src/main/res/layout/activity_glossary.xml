<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GlossaryActivity">

    <include
        android:id="@+id/header_layout_glossary"
        layout="@layout/glossary_header" />

    <RelativeLayout
        android:id="@+id/header_layout_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout_glossary"
        android:background="@drawable/horizontal_line_copy">

        <com.ingentive.nahad.customfont.CustomTextViewGothamFont
            android:id="@+id/tv_nahad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="GLOSSARY"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            app:gothamFont="ufonts.com_gotham-medium.ttf" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_data_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout_two"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="GLOSSARY Data Not Found!"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/a_z"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/header_layout_two"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="26">

        <Button
            android:id="@+id/btn_a"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A" />

        <Button
            android:id="@+id/btn_b"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B" />

        <Button
            android:id="@+id/btn_c"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C" />

        <Button
            android:id="@+id/btn_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="D"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_e"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="E" />

        <Button
            android:id="@+id/btn_f"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="F" />

        <Button
            android:id="@+id/btn_g"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="G" />

        <Button
            android:id="@+id/btn_h"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="H" />

        <Button
            android:id="@+id/btn_i"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I" />

        <Button
            android:id="@+id/btn_j"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="J" />

        <Button
            android:id="@+id/btn_k"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="K" />

        <Button
            android:id="@+id/btn_l"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L" />

        <Button
            android:id="@+id/btn_m"
            style="@style/GlossaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M" />

        <Button
            android:id="@+id/btn_n"
