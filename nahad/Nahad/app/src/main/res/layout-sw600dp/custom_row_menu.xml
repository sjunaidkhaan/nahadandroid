<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_row_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/toc_litview_item_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_radio"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/radio"
        android:layout_gravity="center_vertical"
       android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />
    <com.ingentive.nahad.customfont.CustomTextViewGothamFont
        android:id="@+id/tv_item"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        app:gothamFont="ufonts.com_gotham-medium.ttf"/>
</LinearLayout>